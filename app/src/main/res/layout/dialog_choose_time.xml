<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="请选择时间"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/view_stub_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center" >
        <DatePicker
            android:id = "@+id/date_picker_start_time"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:calendarViewShown="false"
            style="@android:style/Theme.Holo.Light.NoActionBar"
            />
        <!--<DatePicker-->
            <!--android:id = "@+id/date_picker_end_time"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:calendarViewShown="false"-->
            <!--style="@android:style/Theme.Holo.Light.NoActionBar"-->
            <!--/>-->
        <!--<TimePicker-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id = "@+id/time_picker"-->
            <!--style="@android:style/Theme.Holo.Light.NoActionBar"-->
            <!--/>-->
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="结束时间"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center" >
        <DatePicker
            android:id = "@+id/date_picker_end_time"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:calendarViewShown="false"

            />
    </LinearLayout>
    <!--两个按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="right">
            <Button
                android:id="@+id/date_picker_cancel"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:background="@drawable/btnsharp"
                android:layout_columnSpan="1"
                android:layout_marginLeft="10dp"
                android:text="取消"
                android:textSize="14sp"
                android:textColor="#ededed"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="right">
            <Button
                android:id="@+id/date_picker_ok"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/btnsharp"
                android:layout_column="3"
                android:text="确认"
                android:textSize="14sp"
                android:textColor="#ededed"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>