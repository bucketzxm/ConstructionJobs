<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:paddingLeft="20dp"
                android:text="我要找活"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textColor="@color/md_grey_900"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_grey_200"/>

        <LinearLayout
            android:id="@+id/third_popup_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="24dp" >

            <LinearLayout
                android:paddingBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="地点："
                    />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/third_popup_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="16sp"
                    android:text="上海"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_grey_500_18dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="工种："
                    />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/third_popup_work_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="16sp"
                    android:text="混凝土工"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_grey_500_18dp"
                    />
                <!--<EditText-->
                <!--android:id="@+id/third_popup_city_work_type"-->
                <!--android:layout_columnSpan="3"-->
                <!--android:layout_gravity="fill"-->
                <!--android:background="@drawable/editsharp_select"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginLeft="36dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:textSize="14sp"-->
                <!--android:inputType="textPhonetic"-->
                <!--/>-->
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="姓名："
                    />
                <EditText
                    android:id="@+id/third_popup_name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/edit_text_blue"
                    android:inputType="text"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="4"
                android:rowCount="1"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="身份："
                    />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/third_popup_level"
                    android:layout_weight="4"
                    android:spinnerMode="dialog"
                    android:entries="@array/level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="年龄："
                    />

                <EditText
                    android:id="@+id/third_popup_age"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/edit_text_blue"
                    android:inputType="number"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="4"
                android:rowCount="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="联系方式："
                    />

                <!--android:background="@drawable/editsharp_select"-->
                <EditText
                    android:id="@+id/third_popup_phone"
                    android:textColorHint="#a5a5a5"
                    android:inputType="phone"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/edit_text_blue"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:paddingBottom="16dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center">
                    <Button
                        android:id="@+id/third_popoup_reset"
                        android:layout_width="100dp"
                        android:layout_height="36dp"
                        android:background="@drawable/btnsharp"
                        android:layout_columnSpan="1"
                        android:layout_marginLeft="10dp"
                        android:text="重置"
                        android:textSize="14sp"
                        android:textColor="#ededed"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/third_popup_submit"
                        android:layout_width="100dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/btnsharp"
                        android:layout_column="3"
                        android:text="提交"
                        android:textSize="14sp"
                        android:textColor="#ededed"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>