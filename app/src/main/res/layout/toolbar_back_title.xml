<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorTopBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/ic_arrow_back_grey_900_24dp"/>
        <TextView
            android:id="@+id/title_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="主页"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/md_grey_900"
            />
        <TextView
            android:id="@+id/select_all_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择全部"
            android:visibility="gone"
            android:layout_marginRight="24dp"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@drawable/tab_shape_filter_white_button_text_color"
            android:background="@drawable/tab_filter_white_button_touch"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="4dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_200"/>
</LinearLayout>


