<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar_back_title"/>

        <GridLayout
            android:id="@+id/sec_popup_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="24dp"
            android:columnCount="1" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:columnCount="4"
                android:rowCount="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="我的名字："
                    />
                <EditText
                    android:id="@+id/edit_self_info_name"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:background="@drawable/editsharp_select"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="36dp"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:columnCount="4"
                android:rowCount="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="我的工种："
                    />

                <EditText
                    android:id="@+id/edit_self_info_work_type"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:background="@drawable/editsharp_select"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="36dp"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:inputType="textPhonetic"
                    />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:columnCount="4"
                android:rowCount="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="手机号码："
                    />

                <EditText
                    android:id="@+id/edit_self_info_phone"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:background="@drawable/editsharp_select"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="36dp"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:columnCount="4"
                android:rowCount="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="我的身份："
                    />

                <EditText
                    android:id="@+id/edit_self_info_identity"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:background="@drawable/editsharp_select"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="36dp"
                    android:layout_height="30dp"
                    android:textSize="14sp"

                    />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:columnCount="4"
                android:rowCount="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="我的城市："
                    />

                <EditText
                    android:id="@+id/edit_self_info_city"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:background="@drawable/editsharp_select"
                    android:textSize="14sp"
                    android:textColorHint="#a5a5a5"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="36dp"
                    />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:columnCount="4"
                android:rowCount="1">
                <Button
                    android:id="@+id/sec_popup_btn_reset"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/btnsharp"
                    android:layout_columnSpan="1"
                    android:layout_marginLeft="10dp"
                    android:text="重置"
                    android:textSize="14dp"
                    android:textColor="#ededed"/>

                <Button
                    android:id="@+id/sec_popup_btn_ok"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/btnsharp"
                    android:layout_column="3"
                    android:text="确定"
                    android:textSize="14dp"
                    android:textColor="#ededed"/>
            </GridLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>