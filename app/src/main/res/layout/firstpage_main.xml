<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/topbar_pick_city_work_type"  />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_100"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:layout_marginRight="16dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:orientation="vertical"
                android:background="@drawable/shape_big_circle_red"
                android:id="@+id/first_page_find_person"
                >
                <TextView
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我要"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="找人"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_marginLeft="8dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:orientation="vertical"
                android:background="@drawable/shape_big_circle_blue"
                android:id="@+id/first_page_find_work"
                >
                <TextView
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我要"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="找活"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#3CFFFFFF"
         >
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="优秀工人展示"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="最新项目展示"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ListView
            android:layout_marginRight="2dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/first_page_hottest_man_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_weight="1"
            android:divider="@color/div_gray"
            android:dividerHeight="0.1dp"
            android:scrollingCache="false"
            />

        <ListView
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:id="@+id/first_page_newest_work_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_weight="1"
            android:divider="@color/div_gray"
            android:dividerHeight="0.1dp"
            android:listSelector="@color/popup_right_bg_selected"
            android:scrollingCache="false"/>


    </LinearLayout>
</LinearLayout>