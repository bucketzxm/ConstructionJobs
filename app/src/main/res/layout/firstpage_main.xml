<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/first_page_refresh"
    >
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/topbar_page_1"  />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:id="@+id/first_page_bg"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="48dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:layout_marginRight="16dp">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:background="@drawable/shape_big_circle_red"
                        android:id="@+id/first_page_find_person"
                        >
                        <TextView
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我要"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="找人"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:layout_marginLeft="16dp">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:background="@drawable/shape_big_circle_blue"
                        android:id="@+id/first_page_find_work"
                        >
                        <TextView
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我要"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="找活"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            android:background="@color/md_grey_50"
            >
            <TextView
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/color1"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="优秀工人展示"/>
            <TextView
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/color12"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="最新项目展示"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/md_grey_50">
            <ListView
                android:background="@color/white"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/first_page_hottest_man_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_weight="1"
                android:divider="@color/div_gray"
                android:dividerHeight="0.1dp"
                android:scrollingCache="false"
                />

            <ListView
                android:background="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:id="@+id/first_page_newest_work_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_weight="1"
                android:divider="@color/div_gray"
                android:dividerHeight="0.1dp"
                android:listSelector="@color/popup_right_bg_selected"
                android:scrollingCache="false"/>


        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>
